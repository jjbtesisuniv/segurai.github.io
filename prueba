  <script>
    // small polish: animate alert time
    (function(){
      const el = document.getElementById('alertTime');
      let t = 2600;
      setInterval(()=>{
        t = Math.max(1, Math.round((t + (Math.random()*600-300))));
        el.textContent = (t/1000).toFixed(1)+'s';
      },1500);
    })();
  </script>
